<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dite_student.android.dite.mechatronics_6_sem">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mms"
        android:text="management of manufacturing system"/>


    <Button
        android:layout_below="@id/mms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mt"
        android:text="manufacturing technology"/>

    <Button
        android:id="@+id/plc"
        android:layout_below="@id/mt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="programmable logic controller and SCADA"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cim"
        android:layout_below="@id/plc"
        android:onClick="open_cim"
        android:text="computer integrated manufacturing "/>
    <Button
        android:id="@+id/ae"
        android:layout_below="@id/cim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="automative electronics"/>
    <Button
        android:layout_below="@id/ae"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="microprocessor and microcontrollers"/>

</RelativeLayout>
